@model Fiap.Curso.Exercicio03.Models.Produto
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Novo Produto</h2>

@using(@Html.BeginForm()){
    <div class="form-group">
        @Html.LabelFor(p => p.Titulo)
        @Html.TextBoxFor(p => p.Titulo, new { @class="form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Valor)
        @Html.TextBoxFor(p => p.Valor, new { @class="form-control", type="number", step="any" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.DataCadastro)
        @Html.TextBoxFor(p => p.DataCadastro, new { @class="form-control", type="date" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Descricao)
        @Html.TextAreaFor(p => p.Descricao, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Nacional)
        @Html.CheckBoxFor(p => p.Nacional)
    </div>
    <input type="submit" class="btn btn-default" value="Salvar" />

}

